{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Keyword",
    "type": "object",
    "properties": {
        "id": {
            "title": "ID",
            "type": "string"
        },
        "name": {
            "title": "Name",
            "type": "string"
        },
        "link": {
            "title": "Link",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "type": "string"
        },
        "source": {
            "title": "Source",
            "$ref": "source.json" },
        "bud_id": {
            "title": "Bud ID",
            "type": "integer"
        },
        "date_created": {
            "title": "Date Created",
            "type": "string",
            "anyOf": [
                {"format": "date-time"},
                {"format": "date"}
            ]
        },
        "created_by": {
            "title": "Created By",
            "type": "string"
        }
    },
    "required": ["name", "source"]
}